{
	"name": "@rbxts/material-ui",
	"version": "0.6.1",
	"description": "A library of Roact UI components that roughly follow the Material Design 3 Guidlines.",
	"main": "out/init.lua",
	"repository": "https://github.com/simplynoni/roblox-material-ui",
	"author": "simplynoni",
	"license": "MIT",
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"out",
		"!**/*.tsbuildinfo"
	],
	"types": "out/index.d.ts",
	"scripts": {
		"syncIcons": "tarmac sync --target roblox -v && ltts src/Icons.lua && sed -i 's/Vector2.new/new Vector2/g' src/Icons.ts && rm src/Icons.lua",
		"build": "rbxtsc --optimizedLoops --rojo serve.project.json",
		"watch": "rbxtsc -w --optimizedLoops --rojo serve.project.json",
		"prepublishOnly": "npm run build"
	},
	"devDependencies": {
		"@rbxts/compiler-types": "^2.1.0-types.1",
		"@rbxts/types": "^1.0.669",
		"lua-to-typescript": "^0.2.2",
		"prettier": "^2.8.4",
		"rbxts-transformer-services": "^1.0.1",
		"roblox-ts": "^2.1.0",
		"typescript": "^4.9.4"
	},
	"dependencies": {
		"@rbxts/colour-utils": "^1.3.1",
		"@rbxts/flipper": "^2.0.1",
		"@rbxts/maid": "^1.0.0-ts.1",
		"@rbxts/roact": "^1.4.4-ts.0",
		"@rbxts/services": "^1.5.1"
	}
}
